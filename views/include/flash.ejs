<% if(success && success.length > 0)  { %><div class="alert  alert-success col-lg-4  offset-lg-4 offset-sm-0  alert-dismissible fade show popup" role="alert">
   <%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>

<% if(error && error.length > 0)  { %><div class="alert alert-danger col-lg-4  offset-lg-4 offset-sm-0   alert-dismissible fade show popup" role="alert">
    <%= error %>
     <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
 </div>
 <% } %>