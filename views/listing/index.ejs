<% layout('/layout/boilerplate') %>
<style>
.main {
  display: flex;
  align-items: center;
}
#filter {
  display: flex;
  text-align: center;
  overflow-x: auto; 
  padding-left: 0.5rem;
  padding-right: 1rem;
}
#filter::-webkit-scrollbar {
  display: none;
}
#filter #icons {
  margin-left: 1rem;
  opacity: 0.8;
  cursor: pointer;
  margin-top: 1rem;
  margin-bottom: 0.5rem;
  opacity: 0.8;
}
#filter div p {
  font-size: 1rem;
}
#filter #icons:hover {
  opacity: 1;
}
#switch {
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid #CCCCCC;
  border-radius: 0.6rem;
  padding: 0.6rem;
  height: 4rem;
  font-size: 1rem;
}
#switch:hover {
  background-color: rgba(239, 235, 235, 0.879);
  border-style: 2px solid;
}
.gst {
  display: none;
}
@media screen and (max-width: 576px) {
    #switch {
      width: 60%; 
      margin-left: 2rem;
      margin-bottom: 1.5rem;
    }
  }

</style>
</head>
<body>
<div class="row main  mb-4">
<div class="col col-lg-8 col-sm-12 col-md-12">
  <div id="filter">
    <div id="icons" data-category="trending">
