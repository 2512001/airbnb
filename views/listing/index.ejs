    <div id="icons"  data-category="pools">
      <i class="fas fa-swimmer"></i>   
      <p>pools</p>
    </div>
    <div id="icons"  data-category="camping">
      <i class="fas fa-campground"></i>    
      <p>camping</p>
    </div>
    <div id="icons"  data-category="farms">
      <i class="fas fa-horse"></i>
      <p>farms</p>
    </div>
    <div id="icons"  data-category="arctics">
      <i class="fas fa-snowflake"></i>    
      <p>arctic</p>
    </div>
    <div id="icons" data-category="lakefront">
      <i class="fas fa-house-damage"></i>
      <p>lakefront</p>
    </div>
    <div id="icons"  data-category="skating">
      <i class="fas fa-skating"></i>
